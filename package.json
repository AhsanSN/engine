{
  "name": "playcanvas",
  "version": "0.223.0",
  "author": "PlayCanvas <support@playcanvas.com>",
  "homepage": "https://playcanvas.com",
  "description": "PlayCanvas WebGL game engine",
  "keywords": [
    "playcanvas",
    "game engine",
    "webgl",
    "webgl2",
    "3d"
  ],
  "license": "MIT",
  "main": "build/output/playcanvas-latest.js",
  "bugs": {
    "url": "https://github.com/playcanvas/engine/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/playcanvas/engine.git"
  },
  "optionalDependencies": {
    "jsdom": "^11.5.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 5,
      "sourceType": "script",
      "ecmaFeatures": {}
    },
    "rules": {
      "accessor-pairs": "error",
      "comma-dangle": [
        "error", "never"
      ],
      "for-direction": "error",
      "getter-return": "error",
      "no-compare-neg-zero": "error",
      "no-cond-assign": "error",
      "no-debugger": "error",
      "no-dupe-args": "error",
      "no-dupe-keys": "error",
      "no-duplicate-case": "error",
      "no-empty": [
        "error", {
          "allowEmptyCatch": true
        }
      ],
      "no-ex-assign": "error",
      "no-extra-boolean-cast": "error",
      "no-extra-semi": "error",
      "no-floating-decimal": "error",
      "no-func-assign": "error",
      "no-labels": "error",
      "no-lone-blocks": "error",
      "no-octal": "error",
      "no-redeclare": "error",
      "no-sparse-arrays": "error",
      "no-tabs": "error",
      "no-trailing-spaces": "error",
      "no-unmodified-loop-condition": "error",
      "no-unsafe-negation": "error",
      "no-useless-return": "error",
      "use-isnan": "error",
      "valid-jsdoc": [
        "error", {
          "prefer": {
            "return": "returns"
          },
          "preferType": {
            "boolean": "Boolean",
            "function": "Function",
            "number": "Number",
            "object": "Object",
            "string": "String"
          },
          "requireReturn": false
        }
      ],
      "valid-typeof": "error"
    },
    "env": {
      "browser": true,
      "node": true
    }
  },
  "devDependencies": {
    "eslint": "^4.19.0",
    "fs-extra": "^3.0.1",
    "google-closure-compiler": "^20170423.0.0",
    "preprocessor": "^1.4.0"
  },
  "scripts": {
    "prepublishOnly": "cd build && node build.js",
    "lint": "eslint src"
  },
  "engines": {
    "node": ">= 0.6.12"
  }
}
