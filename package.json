{
  "name": "playcanvas",
  "version": "0.223.0",
  "author": "PlayCanvas <support@playcanvas.com>",
  "homepage": "https://playcanvas.com",
  "description": "PlayCanvas WebGL game engine",
  "keywords": [
    "playcanvas",
    "game engine",
    "webgl",
    "webgl2",
    "3d"
  ],
  "license": "MIT",
  "main": "build/output/playcanvas-latest.js",
  "bugs": {
    "url": "https://github.com/playcanvas/engine/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/playcanvas/engine.git"
  },
  "optionalDependencies": {
    "jsdom": "^11.5.1"
  },
  "eslintConfig": {
    "parserOptions": {
        "ecmaVersion": 5,
        "sourceType": "script",
        "ecmaFeatures": {}
    },
    "rules": {
        "comma-dangle": ["error", "never"],
        "for-direction": "error",
        "getter-return": "error",
        "no-compare-neg-zero": "error",
        "no-debugger": "error",
        "no-extra-semi": "error",
        "no-tabs": "error",
        "no-unsafe-negation": "error",
        "no-useless-return": "error",
        "use-isnan": "error",
        "valid-jsdoc": [
            "error", {
                "requireReturn": false
            }
        ],
        "valid-typeof": "error"
    },
    "env": {
        "browser": true,
        "node": true
    }
  },
  "devDependencies": {
    "eslint": "^4.19.0",
    "fs-extra": "^3.0.1",
    "google-closure-compiler": "^20170423.0.0",
    "preprocessor": "^1.4.0"
  },
  "scripts": {
    "prepublishOnly": "cd build && node build.js",
    "lint": "eslint src"
  },
  "engines": {
    "node": ">= 0.6.12"
  }
}
